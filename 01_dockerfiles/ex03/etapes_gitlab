apt-get update
apt-get install curl openssh-server ca-certificates postfix
curl -O https://packages.gitlab.com/install/repositories/gitlab/gitlab-ce/script.deb.sh
bash script.deb.sh

apt install gitlab-ce

=> in /etc/gitlab/gitlab.rb
- external_url 'http://10.12.3.9'
- generate certifactes ssl :
	openssl req -x509 -nodes -days 365 -newkey rsa:2048 -keyout /etc/gitlab/ssl/gitlab_key.key -out /etc/gitlab/ssl/gitlab_cert.crt
- nginx['redirect_http_to_https'] = true
- nginx['ssl_certificate'] = "/etc/gitlab/ssl/gitlab_cert.crt"
- nginx['ssl_certificate_key'] = "/etc/gitlab/ssl/gitlab_key.key"

apt-get install tzdata
/opt/gitlab/embedded/bin/runsvdir-start& gitlab-ctl reconfigure
